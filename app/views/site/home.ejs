<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Introdução ao Node JS</title>
  </head>
  <body>
    <h1>Página Home</h1>
    <% var texto = "Trabalhando com EJS"; %>
    <p><%= texto %></p>
    <ul>
    <% for(var chave in clientes){  %>
      <li><%= clientes[chave].nome %> - <%= clientes[chave].email  %></li>

    <% } %>
    </ul>
    <br>

    <% if (errors) { %>
    <ul>
      <% for(var key in errors) { %>
      <li><%= errors[key].msg %></li>
      <% } %>
    </ul>
    <% } %>
    

    <form action="/" method="post">
      <input type="text" name="nome" value="<%= dados.nome %>" placeholder="Nome">
      <input type="text" name="email" value="<%= dados.email%>" placeholder="E-mail">
      <button>Adicionar</button>
    </form>

  </body>
</html>
